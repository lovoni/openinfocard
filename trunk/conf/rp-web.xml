<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <display-name>Echo Servlet</display-name>
        <description>Echo's Posts</description>
        <servlet-class>org.xmldap.rp.servlet.EchoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RelyingPartyServlet</servlet-name>
        <display-name>RP Servlet</display-name>
        <description>Processes Infocard Posts</description>
        <servlet-class>org.xmldap.rp.servlet.RelyingPartyServlet</servlet-class>
        <init-param>
            <param-name>keystore</param-name>
            <param-value>/Users/cmort/xmldap_files/xmldap_org.jks</param-value>
        </init-param>
        <init-param>
            <param-name>keystore-password</param-name>
            <param-value>password</param-value>
        </init-param>
        <init-param>
            <param-name>key</param-name>
            <param-value>xmldap</param-value>
        </init-param>
        <init-param>
            <param-name>key</param-name>
            <param-value>xmldap</param-value>
        </init-param>
        <init-param>
            <param-name>key-password</param-name>
            <param-value>password</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RelyingPartyServlet</servlet-name>
        <url-pattern>/infocard</url-pattern>
    </servlet-mapping>
</web-app>